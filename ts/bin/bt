#!/bin/sh

case $1 in
	cd)	qemu-system-x86_64 -soundhw hda -vga qxl -global qxl-vga.vram_size=132710400 -smp cores=4,threads=1,sockets=1 -cdrom /build/boot-images/iso/thinstation.iso -m 2048 -usbdevice tablet -enable-kvm;;
	bios)	qemu-system-x86_64 -hda /build/bios.boot -m 1536 -enable-kvm;;
	*)	qemu-system-x86_64 -L . --bios /usr/share/edk2.git/ovmf-x64/OVMF-with-csm.fd -cdrom /build/boot-images/iso/thinstation.iso -m 1536  --enable-kvm;;
esac

