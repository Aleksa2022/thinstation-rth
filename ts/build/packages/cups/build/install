#!/bin/sh

export PACKAGE=cups
export PORTS="$PACKAGE cups-filters"
export DROP_FILES="cups.key cups.crt K35cups-browsed"
export DROP_DIRS="etc/rc.d etc/rc0.d etc/rc3.d etc/rc5.d"
export CREATE_EMPTY_DIRS="
etc/ssl/keys
etc/ssl/certs
var/cache/cups
etc/cups/ssl
etc/cups/ppd
etc/cups/interfaces
"
repackage -e

# Fix Link
rm packages/cups/etc/rc2.d/S82cups-browsed
ln -sf /etc/init.d/cups-browsed packages/cups/etc/rc2.d/S82cups-browsed
sed -i -e 's/start /init /g' packages/cups/etc/init.d/cups-browsed

mksslcert packages/cups/etc/ssl/keys/cups.key packages/cups/etc/ssl/certs/cups.crt localhost 2>/dev/null

returnval=$?

exit $returnval
