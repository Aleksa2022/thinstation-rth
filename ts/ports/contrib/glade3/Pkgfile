# Description: GTK Interface Builder.
# URL:         http://glade.gnome.org/
# Maintainer:  Thomas Penteker, tek at serverop dot de
# Depends on:  p5-xml-parser

name=glade3
archname=glade
version=3.20.0
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/glade/${version:0:4}/glade-$version.tar.xz)

build() {
   cd glade-$version

   ./configure \
      --prefix=/usr \
      --disable-gtk-doc \
      --with-help-formats=NONE \
       \
      --disable-scrollkeeper \
      --enable-shared \
      --disable-static \
       \
       

   make && make DESTDIR=$PKG install
   ln -sf /usr/bin/glade-3 $PKG/usr/bin/glade
   rm -rf $PKG/usr/share/{locale,gnome,omf,gtk-doc}
}
