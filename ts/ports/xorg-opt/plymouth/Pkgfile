name=plymouth
version=git
release=12
source=('lightdm-plymouth.service')

build() {
git clone --depth 1 git://git.freedesktop.org/git/plymouth
        cd $name

        ./autogen.sh --prefix=/usr \
                        --sysconfdir=/etc \
                        --mandir=/usr/man \
                        --localstatedir=/var \
                        --enable-pango \
                        --enable-gtk \
                        --enable-libdrm_intel \
                        --enable-libdrm_radeon \
                        --enable-libkms \
                        --enable-drm-renderer \
                        --enable-systemd-integration

        make
	make DESTDIR=$PKG install

  for i in lightdm-plymouth.service; do
    install -Dm644 "$SRC/$i" "$PKG/usr/lib/systemd/system/$i"
  done
}
