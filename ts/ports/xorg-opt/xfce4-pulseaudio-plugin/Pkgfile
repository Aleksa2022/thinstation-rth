name=xfce4-pulseaudio-plugin
version=0.3.4
release=1
_commit=e055393468e04bc34e0047dc5bb3c983d8183d8a

build() {
  git clone https://git.xfce.org/panel-plugins/xfce4-pulseaudio-plugin
  cd $name
  NOCONFIGURE=1 ./autogen.sh

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --enable-keybinder \
    --enable-libnotify \
    --enable-maintainer-mode

  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

  make
  make DESTDIR="${PKG}" install
}
