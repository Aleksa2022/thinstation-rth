# Description: Userspace device management daemon
# URL: http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html
# Maintainer: CRUX System Team, core-ports at crux dot nu

name=systemd
version=231
release=1
source=(https://github.com/systemd/systemd/archive/v$version.tar.gz \
	81-crux.rules)

build() {
unset MAKEFLAGS
    cd $name-$version
cat > config.cache << EOF
cc_cv_CFLAGS__flto=no
EOF
    ./autogen.sh
    ./configure \
		--build=x86_64-pc-linux-gnu \
		--host=x86_64-pc-linux-gnu \
                --sysconfdir=/etc \
		--localstatedir=/var \
		--with-rootprefix= \
		--with-rootlibdir=/lib \
		--config-cache \
		--enable-shared \
		--disable-binfmt \
		--disable-vconsole \
		--disable-quotacheck \
		--disable-qrencode \
		--disable-microhttpd \
		--disable-split-usr \
		--disable-coredump \
		--enable-gnuefi

    make 
    make install DESTDIR=$PKG

    mkdir -p $PKG/lib/{firmware,udev/devices/{pts,shm}}

    # Populate nodes
    mknod -m 600 $PKG/lib/udev/devices/console c 5 1
    mknod -m 600 $PKG/lib/udev/devices/kmsg c 1 11
    mknod -m 666 $PKG/lib/udev/devices/null c 1 3
    mknod -m 666 $PKG/lib/udev/devices/zero c 1 5

    # Add CRUX items
#    install -m 0755 $SRC/start_udev $PKG/sbin
    install -m 0644 $SRC/81-crux.rules $PKG/lib/udev/rules.d

    # Keep udevinfo for legacy support
    mkdir -p $PKG/usr/bin
    ln -s /bin/udevadm $PKG/usr/bin/udevinfo
}
