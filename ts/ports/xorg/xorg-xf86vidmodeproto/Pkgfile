name=xorg-xf86vidmodeproto
archname=${name#xorg-}
archname=${name#xorg-}
archname=${name#xorg-}
version=2.3.1
release=1
source=(http://xorg.freedesktop.org/releases/individual/proto/xf86vidmodeproto-$version.tar.bz2)

build() {
	cd xf86vidmodeproto-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
